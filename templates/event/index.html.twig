{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}



{% block body %}

{% include "components/hero.html.twig" %}

<div class="container mt-3 mb-2">
    <div class="row">
        {% for event in events %}

        <div class="col-lg-4 col-md-6 col-sm-12 p-4">
            <div class="card" style="width: 18rem;">
                <img src="{{asset('picture/'~ event.picture)}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{event.name}}</h5>
                    <p class="card-text">{{event.description}}</p>
                    <a href="/{{event.id}}" class="btn btn-outline-success">Details</a>
                    <a href="{{event.id}}/edit" class="btn btn-outline-dark">Edit</a>
                    <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>

        {% endfor %}






        {# <a href="{{ path('app_event_new') }}">Create new</a> #}
        {% endblock %}